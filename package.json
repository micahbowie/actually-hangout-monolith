{
  "name": "actually-monolith",
  "version": "0.0.1",
  "description": "Actually monolith. Actually Hangout Core Logic",
  "author": "Good For Nothing Engineering",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:prod": "nest build && pnpm sentry:sourcemaps",
    "clean": "concurrently \"pnpm test\" \"pnpm lint\" \"pnpm format\"",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test,infra}/**/*.ts\" --fix",
    "migration:create": "typeorm-ts-node-commonjs migration:create",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/db/data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/db/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/db/data-source.ts",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d src/db/data-source.ts",
    "prepare": "husky",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org good-for-nothing-tech --project actually-monolith2 ./dist && sentry-cli sourcemaps upload --org good-for-nothing-tech --project actually-monolith2 ./dist",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "lsof -ti:3000 | xargs kill -9 && nest start --watch",
    "start:prod": "node dist/src/main",
    "start:worker": "ts-node src/temporal/worker/index.ts",
    "ngrok": "ngrok start --all --config ngrok.yml",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch",
    "typeorm": "typeorm-ts-node-commonjs",
    "destroy:staging": "sst remove --stage staging",
    "deploy:staging": "SST_BUILD_CONCURRENCY_CONTAINER=2 sst deploy --stage staging",
    "dev": "rm -rf dist && sst dev --stage dev",
    "deploy:dev": "sst deploy --stage dev",
    "unlock:dev": "sst unlock --stage dev",
    "destroy:dev": "sst remove --stage dev",
    "deploy:prod": "sst deploy --stage production"
  },
  "dependencies": {
    "@apollo/server": "^4.10.4",
    "@clerk/backend": "^2.17.0",
    "@clerk/clerk-js": "^5.96.0",
    "@clerk/express": "^1.7.35",
    "@keyv/valkey": "^1.0.8",
    "@nestjs/apollo": "^13.1.0",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/graphql": "^13.1.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@sentry/cli": "^2.56.0",
    "@sentry/nestjs": "^10.16.0",
    "@sentry/node": "^10.16.0",
    "@sentry/profiling-node": "^10.16.0",
    "@temporalio/client": "^1.13.0",
    "@temporalio/worker": "^1.13.0",
    "@temporalio/workflow": "^1.13.0",
    "@types/uuid": "^11.0.0",
    "cache-manager": "^7.2.2",
    "cacheable": "^2.0.2",
    "dotenv": "^17.2.3",
    "graphql": "^16.11.0",
    "ioredis": "^5.8.0",
    "keyv": "^5.5.3",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sst": "3.17.14",
    "typeorm": "^0.3.27",
    "typeorm-naming-strategies": "^4.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@clerk/types": "^4.89.0",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/aws-lambda": "8.10.153",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!uuid)"
    ]
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write",
      "jest --findRelatedTests --passWithNoTests"
    ]
  }
}
